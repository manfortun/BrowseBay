@model LogInDto

@{
    ViewData["Title"] = "Welcome";
}

<div class="container border p-4 col-lg-5">
    <form method="post" class="m-3">
        <fieldset>
            <legend>Log In</legend>
            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Username field-->
            <div class="form-group col mb-3 p-1">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Password field-->
            <div class="form-group col mb-3 p-1">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary form-control">Log In</button>
            <div class="row mt-3">
                <a asp-action="signup" class="btn btn-link">or create an account</a>
            </div>

        </fieldset>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}